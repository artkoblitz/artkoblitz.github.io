reset
set title "CUSTO Fiscal em 10 anos: R$284 bi"
set style fill pattern 2
set xlabel ""
set xrange [2007:2016]
set ylabel "R$ bilhões 2016"
set yrange [0:100]

plot data1 using 1:5 with linespoints lw 5 title 'Custo Fiscal', \
     data1 using 1:5  with filledcurves x1 title 'Custo Fiscal Liq.'
#+end_src

    
