#+begin_src gnuplot :var data1=Custo-BeneficioCompleto :exports code :file fiscalMultiplot.png
reset
set style function lines
set size 1.0, 1.0
set origin 0.0, 0.0
set multiplot
set size 0.5,0.5
set origin 0.0,0.5
set grid
unset key

# Plot versão do parecer do relator
set title "Custo fiscal: R$284,7 bi"
set style fill pattern 2
set xlabel ""
set xrange [2007:2016]
set xtics 2007,2,2016
set ylabel "R$ bilhões 2016"
set yrange [0:80]

plot data1 using 1:5 with linespoints lw 3 title 'Custo Fiscal', \
     data1 using 1:5  with filledcurves x1 title 'Custo Fiscal Liq.'

# Plot versão custo = benefício fiscal
set size 0.5,0.5
set origin 0.0,0.0

set title "Custo=Benefício,{/Symbol a} = .64"
set style fill pattern 2
set xlabel ""
set xrange [2007:2016]
set ylabel "R$ bilhões 2016"
set yrange [0:80]

plot data1 using 1:5 with linespoints lw 3 title 'Custo Fiscal', \
     data1 using 1:5:9  with filledcurves above title 'Custo Fiscal Liq.', \
     data1 using 1:9 with linespoints lw 3 title 'Benefício Fiscal 0.64', \
     data1 using 1:5:9  with filledcurves below title 'Beneficio Fiscal Liq.'

# Plot versão ajuste contábil
set size 0.5,0.5
set origin 0.5,0.5

set title "Custo fiscal líq.: R$49bi"

set style fill pattern 2
set xlabel ""
set xrange [2007:2016]
set ylabel "R$ bilhões 2016"
set yrange [0:80]

plot data1 using 1:3 with linespoints lw 3 title 'Custo Fiscal', \
     data1 using 1:3:4  with filledcurves above title 'Custo Fiscal Liq.', \
     data1 using 1:4 with linespoints lw 3 title 'Benefício Fiscal', \
     data1 using 1:3:4  with filledcurves below title 'Beneficio Fiscal Liq.'

#  Plot multiplicador 1.3
set origin .5,0.

set title "Benefício fiscal líquido: R$ 63,4 bi"
set style fill pattern 2
set xlabel ""
set xrange [2007:2016]
set ylabel "R$ bilhões 2016"
set yrange [0:80]

plot data1 using 1:5 with linespoints lw 3 title 'Custo Fiscal', \
     data1 using 1:5:10  with filledcurves above title 'Custo Fiscal Liq.', \
     data1 using 1:10 with linespoints lw 3 title 'Benefício Fiscal (1.3)', \
     data1 using 1:5:10  with filledcurves below title 'Beneficio Fiscal Liq.'

unset multiplot
#+end_src

